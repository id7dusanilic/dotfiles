# Open web browser
super + w
	$BROWSER

# Open file manager
super + r
	$TERM_EMULATOR -e ranger

# Open gvim
super + e
	gvim

# Switch to previuos keyboard layout
super + space
	keyboard_layout --prev && sigdwmblocks 2

# Choose a keyboard layout
super + control + space
	keyboard_layout --set && sigdwmblocks 2

# System options
super + shift +q
	dmenu_system

# Pipe clipboard to a program
super + shift + backslash
	dmenu_clipboard_run

# Take a screenshot
Print
	dmenu_screenshot

# Lock screen
super + shift + l
	slock

# Wifi options
super + F1
	dmenu_wifi

# Edit common config files
super + F2
	dmenu_editconfig

# Passmenu
super + F3
	passmenu

# Edit scripts
super + F4
	$TERM_EMULATOR -e fzf_editscripts

# Kill a process with dmenu
super + F9
	dmenu_kill

# Start dmenu_run with history
super + shift + p
	dmenu_run_history

# Audio control
XF86AudioMute
	pamixer -t

XF86Audio{Raise,Lower}Volume
	pamixer --allow-boost {-i,-d} 5
