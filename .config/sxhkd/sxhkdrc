# Open web browser
super + w
	$BROWSER

# Open file manager
super + r
	$TERM_EMULATOR -e ranger

# Switch to previuos keyboard layout
super + space
	previous_kb_layout

# Choose a keyboard layout
super + control + space
	dmenu_keyboard_layout

# System options
super + shift +q
	dmenu_system

# Pipe clipboard to a program
super + shift + backslash
	dmenu_clipboard_run

# Lock screen
super + shift + l
	slock

# Wifi options
super + F1
	dmenu_wifi

# Edit common config files
super + F2
	dmenu_editconfig

# Passmenu
super + F3
	passmenu

# Start dmenu_run with history
super + shift + p
	dmenu_run_history

# Audio control
XF86AudioMute
	pamixer -t

XF86Audio{RaiseVolume,LowerVolume}
	pamixer --allow-boost {-i,-d} 5
