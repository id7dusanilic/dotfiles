#!/bin/sh

# A dmenu wrapper script for system functions.

[ -z "${DMENU_COMMAND}" ] && DMENU_COMMAND="dmenu"

cmds="\
 lock			slock
 leave			qtile cmd-obj -o cmd -f shutdown
 renew			qtile cmd-obj -o cmd -f restart
鈴 suspend		loginctl suspend
鈴 hibernate	loginctl hibernate
勒 reboot		loginctl reboot
 shutdown		loginctl poweroff"

choice="$(echo "$cmds" | cut -f 1 | ${DMENU_COMMAND} -l 7 -i -p "System options")" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -f 2-`
