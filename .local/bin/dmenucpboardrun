#!/bin/sh

clip=$(xclip -o)

cmds="\
mpv		mpv $clip
surf	surf $clip
other"

choice="$(echo "$cmds" | cut -f 1 | dmenu -l 5 -p "Command:")" || exit 1

if [ $choice == "other" ]; then
	cmd=$(echo "" | dmenu -p "Custom command:")
	`echo $cmd $clip`
else
	`echo "$cmds" | grep "$choice	" | cut -f 2-`
fi

